# Generic PID (MiFi2352, MC990D)
ATTRS{idVendor}=="1410", ATTRS{idProduct}=="7001", ENV{.MM_USBIFNUM}=="00", ENV{ID_MM_PORT_TYPE_MODEM}="1"
